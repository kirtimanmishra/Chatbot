{
	"init":{
		"state": 0,
		"prompt": "Hello, I'm a bot for GCU. How are you today?",
		"type": "P/N",
		"P": "I think that you are doing fine",
		"N": "Guess I think that you need help."
	},
    "assistance": {
        "state": 1,
        "prompt": "Do you need counselling?",
        "type": "Y/N/M",
